<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rubberRangePickerStartValue"
            android:text="$10"
            android:textSize="20dp"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/rubberRangePickerValueDivider"
            android:text="-"
            android:textSize="20dp"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/rubberRangePickerEndValue"
            android:text="$865"
            android:textSize="20dp"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.jem.rubberpicker.RubberRangePicker
        android:layout_margin="10dp"
        android:id="@+id/rubberRangePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:highlightDefaultThumbOnTouchColor="#ffffff"
        app:highlightTrackColor="#8D131E"
        app:dampingRatio="0.0"
        app:elasticBehavior="rigid"
        app:normalTrackColor="#e8d0d2"/>

</LinearLayout>