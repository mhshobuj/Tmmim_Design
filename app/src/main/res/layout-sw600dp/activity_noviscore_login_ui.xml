<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoviscoreLoginUI">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="#F4EFEF"/>

    <ImageView
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:gravity="center"
        android:src="@drawable/noviscore_background"/>

    <ImageView
        android:id="@+id/logo_IV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:paddingLeft="@dimen/_80sdp"
        android:paddingRight="@dimen/_80sdp"
        android:src="@drawable/ic_logobasline"/>

    <LinearLayout
        android:layout_below="@id/logo_IV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp">

                <RelativeLayout
                    android:id="@+id/main_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_50sdp"
                    android:background="@color/white"
                    android:elevation="@dimen/_8sdp"
                    android:paddingStart="@dimen/_7sdp"
                    android:paddingEnd="@dimen/_7sdp"
                    android:paddingBottom="@dimen/_10sdp">

                    <RelativeLayout
                        android:id="@+id/header1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/iv_music_1"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_music_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_minus2sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_toEndOf="@+id/iv_music_1"
                            android:fontFamily="@font/playfair_display_black"
                            android:text="New User"
                            android:textColor="@color/button_background_color"
                            android:textSize="@dimen/_10ssp"
                            android:layout_marginLeft="@dimen/_minus2sdp"
                            android:layout_toRightOf="@+id/iv_music_1" />

                    </RelativeLayout>

                    <Button
                        android:id="@+id/discover_without_acc_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/header1"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:background="@color/button_background_color"
                        android:drawableEnd="@drawable/ic_arrowbutton_white"
                        android:fontFamily="@font/lato_regular"
                        android:layout_centerInParent="true"
                        android:text="Discover without account"
                        android:paddingStart="@dimen/_6sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:textAlignment="viewStart"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8ssp"
                        android:drawableRight="@drawable/ic_arrowbutton_white"
                        android:layout_gravity="start"
                        android:paddingLeft="@dimen/_6sdp"
                        android:paddingRight="@dimen/_10sdp" />

                    <Button
                        android:id="@+id/create_acc_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/discover_without_acc_btn"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:background="@color/button_background_color"
                        android:drawableEnd="@drawable/ic_arrowbutton_white"
                        android:fontFamily="@font/lato_regular"
                        android:paddingStart="@dimen/_6sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:text="Create an account"
                        android:textAlignment="viewStart"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8ssp"
                        android:drawableRight="@drawable/ic_arrowbutton_white"
                        android:layout_gravity="start"
                        android:paddingLeft="@dimen/_6sdp"
                        android:paddingRight="@dimen/_10sdp" />

                    <RelativeLayout
                        android:id="@+id/header2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/create_acc_btn"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_music_2"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_music_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_minus2sdp"
                            android:layout_marginLeft="@dimen/_minus2sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_toEndOf="@+id/iv_music_2"
                            android:layout_toRightOf="@+id/iv_music_2"
                            android:fontFamily="@font/playfair_display_black"
                            android:text="Log on to"
                            android:textColor="@color/button_background_color"
                            android:textSize="@dimen/_10ssp" />

                    </RelativeLayout>

                    <EditText
                        android:id="@+id/login_email_address_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/header2"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:background="@color/of_white"
                        android:fontFamily="@font/lato_regular"
                        android:hint="Username or email address"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/_5sdp" />

                    <EditText
                        android:id="@+id/login_pass_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/login_email_address_et"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:background="@color/of_white"
                        android:fontFamily="@font/lato_regular"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="@dimen/_5sdp" />

                    <Button
                        android:id="@+id/login_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/login_pass_et"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:background="@color/red"
                        android:drawableEnd="@drawable/ic_arrowbutton_white"
                        android:fontFamily="@font/lato_regular"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:text="Login"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_8ssp"
                        android:drawableRight="@drawable/ic_arrowbutton_white"
                        android:paddingLeft="@dimen/_8sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/forgot_pass_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/login_btn"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:fontFamily="@font/lato_regular"
                        android:text="Forgot your password?"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_8ssp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_293sdp"
                    android:text="www.noviscore.fr"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp" />

            </RelativeLayout>

    </LinearLayout>
    
